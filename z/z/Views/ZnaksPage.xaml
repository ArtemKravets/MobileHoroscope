<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="z.Views.ZnaksPage"
             Title="Ваш гороскоп"
             Padding="10,20,20,10">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ваш гороскоп"  Command="{Binding ZnaksCommand}"  Order="Secondary"/>
        <ToolbarItem Text="Выход"  Command="{Binding ExitCommand}" Order="Secondary"/>
    </ContentPage.ToolbarItems>
    <ListView x:Name="listView"
  ItemsSource="{Binding CurrentSign}"
  HasUnevenRows="True"
  VerticalOptions="FillAndExpand"
  HorizontalOptions="FillAndExpand"
  RowHeight="160"
>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.View>
                        <StackLayout Orientation="Horizontal">
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding comment}" FontSize="Medium"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>

    </ListView>
</ContentPage>
